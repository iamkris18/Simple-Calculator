<h1 class="text-center my-4">Simple Calculator</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: '/calculate', local: true, class: "bg-light p-4 rounded" do |form| %>
        <div class="mb-3">
          <%= form.label :number1, "First Number", class: "form-label" %>
          <%= form.number_field :number1, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :operation, "Operation", class: "form-label" %>
          <%= form.select :operation, options_for_select([['Add', '+'], ['Subtract', '-'], ['Multiply', '*'], ['Divide', '/']]), {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= form.label :number2, "Second Number", class: "form-label" %>
          <%= form.number_field :number2, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit "Calculate", class: "btn btn-primary" %>
        </div>
      <% end %>

      <% if @result %>
        <div class="alert alert-info mt-4 text-center">
          <h2>Result: <%= @result %></h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
